@page "/student"
    <button class="btn btn-primary" @onclick="@Save">Kaydet Ana Component</button>
<h3>Student List</h3>
<h5>@StudentList</h5>

<StudentDetail StudentName="Engin" Tikla="@Save"></StudentDetail>

<h5>@saveMessage</h5>

@code {
    public string StudentList { get; set; }
    private string saveMessage;
    protected override async Task OnInitializedAsync()
    {
        StudentList = "Engin Derin Salih";
    }

    private void Save(MouseEventArgs e)
    {
        saveMessage = "Kaydedildi";
    }

}
